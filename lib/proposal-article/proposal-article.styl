/* Vars
-------------------------------------------------- */
border_radius = 3px
/* Law view
-------------------------------------------------- */
div.alert.alert-warning.alert-dismissable.system-alert
  text-align center

article.proposal
  margin 40px auto
  min-height 300px
  font-size 18px
  line-height 1.5
  position relative

  a:hover
    color #428bca
    text-decoration underline

  img
    max-width 100%

  .top-results-box
    width 100px
    position absolute
    left -140px
    top 180px
    text-align center
    .btn
      background-color #ccc

  .entry-tag
    font-weight bold
    font-size 11px
    text-transform uppercase
    text-align center
    position absolute
    left -140px
    width 100px
    top 44px
    img
      width 40px
      height 40px
      left 30px
      top 20px
      position absolute

    .hexagon
      width 80px
      height 80px


  .summary
    font-size 110%
    margin 40px 0

  .shortsummary
    font-weight bold

  .prosandcons
    width 130%
    margin-left -15%
    margin-bottom 40px
    .icons-wrapper-sm
      display none
      margin-top 10px
      margin-bottom 10px
      i
        font-size 1.5em
    .icons
      display block
      width 100%

      margin-bottom 10px
      .icon-wrapper
        position relative
        display inline-block
        width 49%
        margin-right 2%
        text-align center
        &:last-of-type
          margin-right 0
        i
          font-size 1.5em
    .column
      display inline-table
      width 49%
      margin-right 2%

      padding .2em

      border 1px solid #bdc3c7//1px solid #ccc
      background-color #ecf0f1

      border-radius 4px
      &:last-of-type
        margin-right 0
    .pros
      background-color lighten(#a4cb53, 50%)
      margin-right 2%
    .cons
      background-color lighten(#d95e59, 60%)
  .clauses
    .clause
      margin-bottom 20px
      img
        width 100%

  h1
    margin-top 0
    margin-bottom 30px

  h2.author
    color #666
    font-size 16px
    font-weight normal
    margin 0

  .meta-information
    margin-bottom 10px
    opacity .6
    color black
    .icon-time
      margin-right 6px
      color #666
    .meta-timeago, .meta-timeago-label
      display inline-block
    .meta-item
      color:black
    .label
      margin-right:10px
      display:inline-block
      border-radius:0

  hr
    border-top 4px solid #eee
    width 50%

  .read-more
    display block
    text-transform capitalize
    margin-top 10px
    margin-bottom 20px
  .footer-notes
    color #666
    margin-bottom 20px

  .participants
    font-weight bold
    padding 10px 0
    margin 30px 0
    border-top 2px solid #f1f1f1
    border-bottom 2px solid #f1f1f1
    .view-more
      background #f1f1f1
      padding 2px 10px
      color #333
      margin-left 6px
      margin-top 2px
      display inline-block
      border-radius border_radius

  .source
    p
      span.glyphicon
        font-size 12px
        margin-right 5px
      a
        font-size 16px
        color #333
        font-weight bold

  .links
    background-color #ecf0f1
    padding 6px 12px
    p
      margin 0
      margin-bottom 5px
      padding-left 12px
      span.glyphicon
        font-size 12px
        margin-right 5px
      a
        font-size 14px
        color #428bca
        font-weight bold

  .share-links
    margin-bottom 40px
    a
      background #ccc
      padding 10px
      margin-right 10px
      border-radius border_radius
      color white
      display inline-block
      line-height 10px
      -webkit-transition all 0.3s ease
      &:hover
        text-decoration none
      &.facebook:hover
        background #3b5998
      &.twitter:hover
        background #3498db
      &.google-plus:hover
        background #c0392b
      &.tumblr:hover
        background #32506d

.embed-container
  position relative
  padding-bottom 56.25%
  height 0
  overflow hidden
  max-width 100%

  iframe
  object
  embed
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    border none
